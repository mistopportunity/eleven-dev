{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sequence Editor",
            "request": "launch",
            "type": "node",
            "program": "${workspaceRoot}/sq-editor/app.js",
            "stopOnEntry": false,
            "args": [], 
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/sq-editor/node_modules/.bin/electron.cmd"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Link Map Scripts (ScriptBook)",
            "cwd": "${workspaceFolder}\\script-link",
            "program": "${workspaceFolder}\\script-link\\index.js",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Web App",
            "cwd": "${workspaceFolder}\\local-host",
            "program": "${workspaceFolder}\\local-host\\app.js",
            "console": "externalTerminal"
        }
    ]
}